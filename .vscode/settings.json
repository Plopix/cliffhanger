{
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "typescript.suggest.paths": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.turbo": true,
        "**/.astro": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/build": true,
        "**/.cache": true
    },
    "files.associations": {
        "**/*/*.css": "tailwindcss"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/dist/*/**": true,
        "**/coverage/*/**": true,
        "**/tmp/*/**": true,
        "**/.nx/*/**": true,
        "**/.run/*/**": true,
        "**/.astro/*/**": true,
        "**/.next/*/**": true
    }
}
